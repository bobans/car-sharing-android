<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <View
            android:id="@+id/drive_status"
            android:layout_width="3dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/image_view_user_photo"
            android:background="@color/colorDivider"
            android:src="@drawable/ic_user_placeholder"
            android:layout_margin="@dimen/item_padding"
            android:layout_width="@dimen/shared_drive_picture_size"
            android:layout_height="@dimen/shared_drive_picture_size"
            android:contentDescription="@null" />

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/item_padding"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/text_view_route"
                    tools:text="Nis - Vranje"
                    android:textSize="@dimen/item_primary_text_size"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/image_view_request_indicator"
                    android:src="@drawable/ic_drive_request_indicator"
                    android:layout_width="@dimen/shared_drive_indicator_size"
                    android:layout_height="@dimen/shared_drive_indicator_size"
                    android:contentDescription="@null" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/image_view_preference_music"
                    android:src="@drawable/ic_drive_preference_music"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />

                <ImageView
                    android:id="@+id/image_view_preference_pets"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_drive_preference_pets"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />

                <ImageView
                    android:id="@+id/image_view_preference_smoking"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_drive_preference_smoking"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />

                <ImageView
                    android:id="@+id/image_view_preference_talk"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_drive_preference_talk"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp" />

                <ImageView
                    android:src="@drawable/ic_people"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />

                <TextView
                    android:id="@+id/text_view_seats"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/item_secondary_text_size"
                    tools:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_view_price"
                android:textSize="@dimen/item_secondary_text_size"
                tools:text="1000 RSD total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_view_date"
                    android:textSize="@dimen/item_secondary_text_size"
                    tools:text="11 Nov 2016 18:00"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_view_repetition_monday"
                    android:textSize="@dimen/item_secondary_text_size"
                    android:textColor="@color/colorTextWhite"
                    android:text="@string/abbreviation_monday"
                    android:background="@drawable/abbreviation_day_background"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_view_repetition_tuesday"
                    android:textSize="@dimen/item_secondary_text_size"
                    android:textColor="@color/colorTextWhite"
                    android:text="@string/abbreviation_tuesday"
                    android:background="@drawable/abbreviation_day_background"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/layout_control_space_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_view_repetition_wednesday"
                    android:textSize="@dimen/item_secondary_text_size"
                    android:textColor="@color/colorTextWhite"
                    android:text="@string/abbreviation_wednesday"
                    android:background="@drawable/abbreviation_day_background"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/layout_control_space_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_view_repetition_thursday"
                    android:textSize="@dimen/item_secondary_text_size"
                    android:textColor="@color/colorTextWhite"
                    android:text="@string/abbreviation_thursday"
                    android:background="@drawable/abbreviation_day_background"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/layout_control_space_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_view_repetition_friday"
                    android:textSize="@dimen/item_secondary_text_size"
                    android:textColor="@color/colorTextWhite"
                    android:text="@string/abbreviation_friday"
                    android:background="@drawable/abbreviation_day_background"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/layout_control_space_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_view_repetition_saturday"
                    android:textSize="@dimen/item_secondary_text_size"
                    android:textColor="@color/colorTextWhite"
                    android:text="@string/abbreviation_saturday"
                    android:background="@drawable/abbreviation_day_background"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/layout_control_space_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_view_repetition_sunday"
                    android:textSize="@dimen/item_secondary_text_size"
                    android:textColor="@color/colorTextWhite"
                    android:text="@string/abbreviation_sunday"
                    android:background="@drawable/abbreviation_day_background"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/layout_control_space_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider" />

</LinearLayout>