<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent" />
            <corners android:radius="@dimen/abbreviation_day_background_border_radius" />
            <size android:height="@dimen/abbreviation_day_background_size" android:width="@dimen/abbreviation_day_background_size" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorDisabled" />
            <corners android:radius="@dimen/abbreviation_day_background_border_radius" />
            <size android:height="@dimen/abbreviation_day_background_size" android:width="@dimen/abbreviation_day_background_size" />
        </shape>
    </item>

</selector>